{
  "name": "caz",
  "version": "1.1.0",
  "description": "A simple yet powerful template-based Scaffolding tools.",
  "keywords": [
    "productivity",
    "scaffolding",
    "boilerplate",
    "generator",
    "starter-kit",
    "templates",
    "template",
    "caz",
    "cli",
    "zce"
  ],
  "homepage": "https://github.com/zce/caz#readme",
  "bugs": {
    "url": "https://github.com/zce/caz/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/caz.git"
  },
  "license": "MIT",
  "author": {
    "name": "zce",
    "email": "w@zce.me",
    "url": "https://zce.me"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "ts-standard",
    "test": "jest --coverage",
    "prepare": "husky install .github/husky"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/cli.ts"
    ],
    "clean": true,
    "minify": true,
    "splitting": true,
    "dts": {
      "resolve": true,
      "entry": "src/index.ts"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": "ts-standard --fix"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testTimeout": 20000,
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**"
    ],
    "moduleNameMapper": {
      "#(.*)": "<rootDir>/node_modules/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(node-fetch|fetch-blob|formdata-polyfill|data-uri-to-buffer|env-paths|ora|cli-cursor|restore-cursor|chalk|log-symbols|is-unicode-supported|is-interactive|strip-ansi|ansi-regex))"
    ]
  },
  "renovate": {
    "extends": [
      "zce"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@types/adm-zip": "0.5.0",
    "@types/ini": "1.3.31",
    "@types/jest": "27.5.0",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.31",
    "@types/prompts": "2.0.14",
    "@types/semver": "7.3.9",
    "@types/validate-npm-package-name": "3.0.3",
    "adm-zip": "0.5.9",
    "cac": "6.7.12",
    "env-paths": "3.0.0",
    "fast-glob": "3.2.11",
    "husky": "8.0.0",
    "ini": "3.0.0",
    "jest": "28.1.0",
    "lint-staged": "12.4.1",
    "lodash": "4.17.21",
    "node-fetch": "3.2.4",
    "ora": "6.1.0",
    "prompts": "2.4.2",
    "semver": "7.3.7",
    "socks-proxy-agent": "6.2.0",
    "ts-jest": "28.0.5",
    "ts-standard": "11.0.0",
    "tsup": "5.12.7",
    "typescript": "4.6.4",
    "validate-npm-package-name": "4.0.0"
  },
  "engines": {
    "node": ">=14.14"
  }
}
